    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  />
  

    
   
</head>
<body>
    

  <%-include("../partialls/navbar.ejs") %>

    <div class="parent">
      <div class="maindiv">
        <form action="/login" method="post">
          <h2 class="head">Sign In for Donor</h2>
          <div class="namediv">
            <div class="fname">
                <label for="name">Email</label><br>
                <input type="email" id="name" name="email" placeholder="Enter your mail" autofocus >
            </div>
            <div class="lname">
                <label for="name">Password</label><br>
                <input type="password" id="name" placeholder="Enter your password" name="password">
            </div>
            <button type="submit" value="submit"  class="but">Sign In</button>
            <div class="cent">
              <p class="nomargin">or sign up with</p>
              <div class="icons">
                <i class="fa-brands fa-google footfa-brands"></i>
                <i class="fa-brands fa-square-facebook footfa-brands"></i>
              </div>
            
              <p class="already">Don't have a acount sign Up ? <a href="/register-user" class="login">sign up </a></p>
            
            </div>
            </div>
        </div>
        </form>
      </div>
    </div>
      
</body>
</html>